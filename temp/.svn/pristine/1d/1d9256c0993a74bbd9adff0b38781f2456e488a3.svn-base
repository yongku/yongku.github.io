<script>
/*
var num = parseInt(value);//버림
var num = Math.ceil(value);//올림
var num = Math.floor(value);//내림
var num = Math.round(value);//반올림
var num = Math.random(value);//랜덤
== 같을때
=== 같을때( String 또는 Number의 형태까지 따지는 조건 )
<> 작거나 클때
<= 크거나 같을때
>= 작거나 같을때
!= 같지 않을때
&& 모든 조건이 맞을 때
|| 그 중에 하나라도 맞을 때
*/
$(function(){
	$('.uxsld').each(function(i, e){
		var uxcur = 0;
		var uxlen = 2;

		//var $uxSld = $('.uxsld');
		var $uxPaging = $(e).find('.uxpaging');
		var $uxCur = $(e).find('.uxcur');
		var $uxTotal = $(e).find('.uxtotal');
		var $uxBtn = $(e).find('.btn');
		var $uxBtnNext = $(e).find('.uxnext');
		var $uxBtnPrev = $(e).find('.uxprev');
		var $uxLst = $(e).find('.uxlst');
		var $uxLstItem = $(e).find('.uxlst li');

		var uxpage = Math.ceil($uxLstItem.length / uxlen);

		//$uxCur.text(uxcur + 1);
		$uxTotal.text(uxpage);
		//console.log(uxpage);

		uxTextCur();
		uxSlice(uxcur);
		function uxTextCur(){
			$uxCur.text(uxcur+1);
		}
		function uxSlice(num){
			uxidx = num * uxlen;
			$uxLstItem.hide().slice(uxidx, uxidx+uxlen).show();
			console.log(uxidx, uxidx+1);
		}
		$uxBtnNext.on('click', function(){
			//uxcur ++;
			uxcur += 1;
			uxTextCur();
			if(uxcur >= uxpage){
				uxcur = 0;
				uxTextCur();
				uxSlice(uxcur);
			} else {
				uxSlice(uxcur);
			}
			//console.log(uxcur);
			return false;
		});
		$uxBtnPrev.on('click', function(){
			//uxcur --;
			uxcur -= 1;
			uxTextCur();
			if(uxcur < 0){
				uxcur = uxpage-1;
				uxTextCur();
				uxSlice(uxcur);
			} else {
				uxSlice(uxcur);
			}
			//console.log(uxcur);
			return false;
		});
	});
});
</script>

