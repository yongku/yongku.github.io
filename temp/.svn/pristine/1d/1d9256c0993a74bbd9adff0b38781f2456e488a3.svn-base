<script>
$(function(){

	var $sldBox = $('.sldbox');
	var $sldBtn = $sldBox.find('.sldbtn a');
	var $sldbtnPrev = $sldBox.find('.prev');
	var $sldbtnNext = $sldBox.find('.next');
	var $sldCur = $sldBox.find('.cur');
	var $sldTotal = $sldBox.find('.total');
	var $sldLst = $sldBox.find('.sldlst li');
	
	var cur = 0;//아이템 개수
	var total = 4;//아이템 보여질 개수
	var sldlst = Math.ceil( $sldLst.length / total );//아이템 개수 / 총 페이지
	$sldTotal.text(sldlst);
	$sldCur.text(cur+1);
	
	$sldLst.hide();
	$sldLst.slice(0, 4).show();//현재 보여질 개수 선택(1개~4개를 첫 페이지에 보여짐)
	
	/*
	$sldBtn.click(function(){
		if( $(this).is('.prev') ){
		   
		}
		else if( $(this).is('.next') ){
				 
		}
	});
	*/
	$sldbtnNext.click(function(){
		cur ++;//현재 보여지는 페이지 개수 증가
		$sldCur.text(cur+1);//현재 보여지는 페이지에 개수 텍스트 담음 0+1=1
		if( cur >= sldlst ){//보여지는 개수가 아이템 개수보다 작거나 같을때 조건식 성립
			cur = 0;
			$sldCur.text(cur+1);//현재 보여지는 페이지에 개수 텍스트 담음
		}
		console.log(cur);
		
		$sldLst.hide();//현재 보여지는 부분 빼고 나머지는 숨김
		$sldLst.slice(total*cur, (total*cur)+total).show();//현재 보여질 아이템 개수만 보여짐 (아이템 총 페이지[4]*아이템개수[0]), (아이템 총 페이지[4]*아이템개수[0]) + 총 페이지[4]
		
		
		
		return false;
	});
	
	$sldbtnPrev.click(function(){
		cur --;//현재 보여지는 페이지 개수 감소
		$sldCur.text(cur+1);//현재 보여지는 페이지에 개수 텍스트 담음 0+1=1
		if( cur < 0 ){//보여지는 개수가 아이템 개수보다 클때 조건식 성립
			cur = sldlst-1;
			$sldCur.text(cur+1);//현재 보여지는 페이지에 개수 텍스트 담음
		}
		console.log(cur);
		
		$sldLst.hide();//현재 보여지는 부분 빼고 나머지는 숨김
		$sldLst.slice(total*cur, (total*cur)+total).show();//현재 보여질 아이템 개수만 보여짐 (아이템 총 페이지[4]*아이템개수[0]), (아이템 총 페이지[4]*아이템개수[0]) + 총 페이지[4]
		
		
		return false;
	});
});
</script>


