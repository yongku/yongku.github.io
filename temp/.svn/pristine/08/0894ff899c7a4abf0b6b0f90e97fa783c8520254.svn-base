	<style>
		body{
			padding:100px;
		}
		.tebmenu{
			position:relative;
			width:100%;
			height:245px;
		}
		.tebmenu::after{
			content:"";
			display:block;
			clear:both;
		}
		.tebmenu > li{
			display:inline-block;
			float:left;
		}
		.tebmenu > li > a{
			display:inline-block;
			max-width:200px;
			min-width:100px;
			padding:10px;
			font-size:14px;
			color:#f00;
			text-align:center;
			border:1px solid #f0f;
			border-left:0;
			background:#ff0;
		}
		.tebmenu > li:first-child > a{
			border-left:1px solid #f0f;
		}
		.tebmenu > li.on > a{
			position:relative;
			border-top:2px solid #00f;
			border-bottom:0;
			z-index:1;
		}
		.tebmenu > li > ul{
			display:none;
			overflow:hidden;
			position:absolute;
			top:39px;
			left:0;
			width:100%;
			border-top:1px solid #f00;
		}
		.tebmenu > li.on > ul{
			display:block;
		}
		.tebmenu > li > ul > li{
			padding:15px;
			padding-bottom:0;
			border-bottom:1px dotted #888;
		}
		.tebmenu > li > ul > li > a{
			overflow:hidden;
			display:block;
			width:100%;
			max-width:100%;
			padding:5px;
			text-overflow:ellipsis;
			white-space:nowrap;
		}

		/* type 2 */
		.tebmenu.type2 > li{
			width:33.33333333%;
		}
		.tebmenu.type2 > li > a{
			min-width:100%;
		}
	</style>
	<script>
		$(document).ready(function(){
			var $sel=$('.tebmenu > li');
			$sel.on('mouseenter focusin',function(){
				$(this).addClass('on');
				$(this).siblings().removeClass('on');
				return false;
			})
		})
	</script>
