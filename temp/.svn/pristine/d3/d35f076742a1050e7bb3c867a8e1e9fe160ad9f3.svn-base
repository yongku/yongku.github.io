/* 갤러리형 리스트 */
.glist{
    width:100%;
}
.glist ul{
    width:100%;
}
.glist ul:after{
    content:"";
    display:block;
    clear:both;
}
.glist li{
    float:left;
    width:334px;
    height:397px;
    margin-left:12px;
    margin-bottom:37px;
}
.glist li:nth-child(4n+1){
    clear:both;
    margin-left:0;
}
.glist li a{
    display:block;
    width:100%;
    height:100%;
}
.glist .imgbox{
    overflow:hidden;
    position:relative;
    width:100%;
    height:223px;
}
.glist .imgbox em{
    overflow:hidden;
    position:absolute;
    display:inline-block;
    width:52px;
    height:58px;
    top:0;
    left:19px;
    padding-top:15px;
    background:url(../images/gallery/2016_label_ico.png) no-repeat 0 0;
    background-size:400px 250px;
    font-size:13px;
    color:#fff;
    text-align:center;
    z-index:1;
}
.glist .imgbox img{
    width:100%;
    height:100%;
    transition:all .5s;
}
.glist .imgbox .ov{
    position:absolute;
    display:none;
    width:334px;
    height:223px;
    top:0;
    left:0;
}
.glist dl{
    width:100%;
    border:1px solid #dcdcdc;
    border-top:0;
    padding:20px;
}
.glist dt{
    position:relative;
    margin-bottom:40px;
}
.glist dt strong{
    color:#000;
    font-size:16px;
    font-weight:600;
}
.glist dt em{
    position:absolute;
    top:0;
    right:0;
    font-size:13px;
    color:#1e468e;
}
.glist dd p{
    margin-bottom:5px;
    font-size:14px;
    color:#6b5b76;
}

/* 마우스 hover 시 변경되는 style */
.glist li a:hover .imgbox img:first-child{
    transform:scale(5,5);
}
.glist li a:hover .imgbox em{
    background-position:0 -75px;
    color:#000;
}
.glist li a:hover .imgbox .ov{
    display:block;
}
.glist li a:hover dl{
    background:#6e7d9a;
    border:1px solid #6e7d9a;
}
.glist li a:hover dt strong{
    color:#fff;
}
.glist li a:hover dt em{
    color:#fff;
}
.glist li a:hover dd p{
    color:#fff;
}
/* paginavigation */
.paginav{
    height:100px;
    text-align:center;
}
.paginav a{
    display:inline-block;
    min-width:32px;
    height:32px;
    margin:0 2px;
    padding:8px 0;
    border:1px solid #ddd;
    vertical-align:middle;
}
.paginav a img{
    width:32px;
    height:32px;
    border:1px solid #ddd;
    vertical-align:middle;
}
.paginav strong{
    display:inline-block;
    min-width:32px;
    height:32px;
    margin:0 2px;
    padding:8px 0;
    color:#fff;
    background:#000;
    vertical-align:middle;
}
.paginav .prev-child{
    margin-right:0;
    border:0;
    padding:0;
}
.paginav .prev{
    margin-left:0;
    border:0;
    padding:0;
}
.paginav .next{
    margin-right:0;
    border:0;
    padding:0;
}
.paginav .next-child{
    margin-left:0;
    border:0;
    padding:0;
}
/* hover 동작 */
.paginav a:hover{
    background:#000;
    color:#fff;
}