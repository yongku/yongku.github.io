<!DOCTYPE html>
<html lang="ko">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="format-detection" content="telephone=no, address=no, email=no, date=no">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>hs연습</title>
	<link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
	<link rel="stylesheet" type="text/css" href="css/reset.css">
	<script type="text/javascript" src="js/jquery/jquery-1.12.4.min.js"></script>
	<script type="text/javascript" src="js/jquery/jquery.easing.min.js"></script>
	<style>
		ul{
			width:100%;
		}
		ul::after{
			content:"";
			display:block;
			clear:both;
		}
		li{
			display:inline-block;
			float:left;
		}
		li > a{
			display:inline-block;
			width:100%;
			padding:20px;
			font-size:14px;
			text-align:center;
			border:1px solid #888;
			background:#ff0;
		}
		li.on > a,li > a:hover{
			background:#f0f;
		}
		.col1 > li{
			width:100%;
		}
		.col2 > li{
			width:50%;
		}
		.col3 > li{
			width:33.3%;
		}
		.col4 > li{
			width:25%;
		}
		.col5 > li{
			width:20%;
		}
	</style>
	<script>
		$(document).ready(function(){
			$('ul').each(function(x,y){
				var $liLen=$(this)
				if($liLen.children('li').length == 1){
					$liLen.addClass('col1');
				}else if ($liLen.children('li').length == 2){
					$liLen.addClass('col2');
				}else if ($liLen.children('li').length == 3){
					$liLen.addClass('col3');
				}else if ($liLen.children('li').length == 4){
					$liLen.addClass('col4');
				}else {
					$liLen.addClass('col5');
				}
			})
		})
	</script>
</head>
<body>
	<ul>
		<li><a href="">menu1</a></li>
		<li><a href="">menu2</a></li>
		<li><a href="">menu3</a></li>
		<li><a href="">menu2</a></li>
		<li><a href="">menu2</a></li>
	</ul>
	<ul>
		<li><a href="">menu1</a></li>
		<li><a href="">menu2</a></li>
		<li><a href="">menu2</a></li>
	</ul>
</body>
</html>